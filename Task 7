// greedy algorithm
#include <iostream>
using namespace std;

int main() {
    const int MAX = 100;  
    string names[MAX];
    double prices[MAX];
    int count = 0;

    double budget;
    cout << "Enter your budget: ";
    cin >> budget;

    cout << "Enter items (type 'done' as name to stop)" << endl;

    while (count < MAX) {
        cout << "Item name: ";
        cin >> names[count];

        if (names[count] == "done")
            break;

        cout << "Item price: ";
        cin >> prices[count];

        count++;
    }

    for (int i = 0; i < count - 1; i++) {
        for (int j = 0; j < count - i - 1; j++) {
            if (prices[j] > prices[j + 1]) {
                swap(prices[j], prices[j + 1]);
                swap(names[j], names[j + 1]);
            }
        }
    }

    double total = 0;
    cout << "Items you should buy: " << endl;

    for (int i = 0; i < count; i++) {
        if (total + prices[i] <= budget) {
            cout << names[i] << " (" << prices[i] << ")\n";
            total += prices[i];
        }
    }

    cout << "Total spent: " << total << endl;

    return 0;
}

// dynamic programming

#include <iostream>
using namespace std;

int main() {
    const int MAX = 100; 
    string names[MAX];
    int prices[MAX];
    int count = 0;

    int budget;
    cout << "Enter your budget: ";
    cin >> budget;

    cout << "Enter items (type 'done' as name to stop)" << endl;

    while (count < MAX) {
        cout << "Item name: ";
        cin >> names[count];

        if (names[count] == "done")
            break;

        cout << "Item price: ";
        cin >> prices[count];

        count++;
    }

    int dp[MAX + 1][1001] = {0};  

    for (int i = 1; i <= count; i++) {
        for (int b = 0; b <= budget; b++) {
            if (prices[i - 1] <= b) {
                dp[i][b] = max(1 + dp[i - 1][b - prices[i - 1]],
                               dp[i - 1][b]);
            } else {
                dp[i][b] = dp[i - 1][b];
            }
        }
    }

    int b = budget;
    int i = count;

    cout << "Items you should buy (DP)" << endl;

    int total = 0;

    while (i > 0) {
        if (dp[i][b] != dp[i - 1][b]) {
            cout << names[i - 1] << " (" << prices[i - 1] << ")\n";
            total += prices[i - 1];
            b -= prices[i - 1];
        }
        i--;
    }

    cout << "Total spent: " << total << endl;

    return 0;
}

